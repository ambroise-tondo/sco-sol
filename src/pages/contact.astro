---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/contact.css";
const title = "Contact | Devis pose de sol à Bordeaux";
const description = "Contactez un artisan revêtement de sol (PVC, lino/linoléum, moquette). Devis pose de sol gratuit sous 24h en Gironde et Nouvelle‑Aquitaine.";
---
<BaseLayout {title} {description}>
  <section class="contact-hero">
    <div class="container py-12 md:py-16">
      <div class="contact-heading">
        <h1>Contact</h1>
        <p class="contact-watermark">—Un projet&nbsp;?</p>
      </div>

      <div class="contact-wrap">
        <!-- Colonne formulaire -->
        <form action="https://formspree.io/f/XXXXXXXX" method="POST" class="contact-form" autocomplete="on">
          <label class="form-label">Que pouvons‑nous faire pour vous ?</label>
          <div class="chip-group">
            {[
              ["PVC"],["Linoléum"],["Moquette"],["Autre"]
            ].map(([label]) => (
              <label class="chip">
                <input type="checkbox" name="type[]" value={label} />
                <span>{label}</span>
              </label>
            ))}
          </div>

          <div class="field-row">
            <input class="field" name="nom" placeholder="Votre nom" required />
            <input class="field" type="email" name="email" placeholder="Votre e‑mail" required />
          </div>
          <input class="field" type="tel" name="telephone" placeholder="Téléphone" />
          <textarea class="field field-area" name="projet" placeholder="Détaillez votre projet (surface, pièce, matériau, photos…)"></textarea>

          <button class="send-btn" type="submit">Envoyer la demande</button>
          <p class="contact-alt">Ou contactez‑nous au <a href="tel:+33663301461">06 63 30 14 61</a> · <a href="mailto:sco.d@hotmail.com">sco.d@hotmail.com</a></p>
        </form>

        <!-- Colonne texte / réseaux -->
        <aside class="contact-aside">
          <p class="aside-text">Parlez‑nous de votre vision, des contraintes (zones humides, trafic), de vos attentes et du rendu souhaité. Nous revenons vers vous sous 24h avec un créneau.</p>
          <ul class="socials">
            <li><a href="tel:+33663301461" aria-label="Téléphone">
              <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor"><path d="M22 16.92v3a2 2 0 0 1-2.18 2A19.77 19.77 0 0 1 3.1 5.18 2 2 0 0 1 5 3h3a2 2 0 0 1 2 1.72c.12.81.3 1.6.54 2.36a2 2 0 0 1-.45 2.11L9 10a16 16 0 0 0 5 5l.81-1.09a2 2 0 0 1 2.11-.45c.76.24 1.55.42 2.36.54A2 2 0 0 1 22 16.92z" stroke-width="1.5"/></svg>
            </a></li>
            <li><a href="mailto:sco.d@hotmail.com" aria-label="Email">
              <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor"><path d="M4 4h16v16H4z" stroke-width="1.5"/><path d="M4 6l8 7 8-7" stroke-width="1.5"/></svg>
            </a></li>
            <li><a href="#" aria-label="Instagram" rel="nofollow noopener">
              <svg viewBox="0 0 24 24" width="22" height="22" fill="none" stroke="currentColor"><rect x="3" y="3" width="18" height="18" rx="5" stroke-width="1.5"/><circle cx="12" cy="12" r="4" stroke-width="1.5"/></svg>
            </a></li>
          </ul>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>
